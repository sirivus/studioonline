{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "baseUrl": ".",
    "outDir": "./dist",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true, 
    "allowJs": true,
    "typeRoots": [
      "./node_modules/@types/"
    ],
    "paths": {
      "*": [
        "node_modules/"
      ]
    }
  }
}